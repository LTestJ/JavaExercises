package problem_set1;

import java.util.Scanner;

public class FooBar {

	public static void main(String[] args) {
		
		//Add foobar.java as part of problem set 1 do the following
		//Go through the numbers 1 to 100. 
		//If the number is divisible by 2 print “foo”, 
		//else if number is divisible by 3, print “bar”, 
		//if the number is divisible by 2 and 3 print “foobar"
    	Scanner scan = new Scanner(System.in);
        System.out.print("Enter the number : \n");
        boolean found = false;       
    	for (int i = 0; i < 100; i++) {
    		int num = scan.nextInt();
    		i = num; 
    		//Employee e = employees.get(i);
    		if (i % 2 == 0 && i % 3 == 0) {
			    System.out.println(num + " foo_bar");
			    found = true;
			    break;
    		}
			else if (i % 2 == 0) {
			    System.out.println(num + " foo");
			    //found = true;
			    break;
			}
			else if (i % 3 == 0) {
				System.out.println(num + " bar");
				found = true;
				break;
			}			 
			else {
				System.out.println("not divisible by 2 or 3");
				break;
			}
    	}    	
	}
}	