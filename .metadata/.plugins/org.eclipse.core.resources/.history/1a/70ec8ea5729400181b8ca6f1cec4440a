package Proj1;

import java.util.Scanner;

public class fileBasedDb {

	public static void main(String[] args) {
		String Option1 = "\n\n1 - Create a new employee";
		String Option2 = "\n2 - Show list of employees";
		String Option3 = "\n3 - Show information about a specified employee";
		String Option4 = "\n4 - Delete an employee";
		String Option5 = "\n5 - Save to file";
		String Option6 = "\n6 - Exit";
		String Option7 = "\n\nChoose an option from the above:";		
		System.out.println
			(Option1 + Option2 + Option3 + Option4 + Option5 + Option6 + Option7);
					
		Scanner scan = new Scanner(System.in);
		System.out.print("\nEnter option number here: ");
		int optionNum = scan.nextInt();
		//scan.close();
		
		for (int i = 1; i < 6; i++) {			
		if (optionNum == i) {
			System.out.print("You entered " + i + " (the correct number)");
			}
//			else {
//				System.out.println("\nIncorrect entry");
//			}
		}
		System.out.println(
				Option1 + Option2 + Option3 + Option4 + Option5 + Option6 + Option7);
		
		System.out.print("\nEnter option number here: ");
		int optionNum2 = scan.nextInt();
		if (optionNum2 == 6) {
			System.out.print("You entered " + 6 + " (you are exiting !! )");
			exit(0);
			}
		
		
	}
}
}
}

}